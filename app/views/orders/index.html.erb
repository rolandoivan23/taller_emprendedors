<h1>Lista de ordenes</h1>

<table class="table">
  <tr>
    <th>Cliente</th>
    <th>Estatus</th>
    <th>Monto total</th>
    <th>Fecha de entrega</th>
    <th>Estatus del pago</th>
    <th>Fecha de liberacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.client_id %></td>
    <td><%= order.order_status_id %></td>
    <td><%= order.monto_total %></td>
    <td><%= order.fecha_entrega %></td>
    <td><%= order.payment_status_id %></td>
    <td><%= order.fecha_liberacion_pedido %></td>
    <td><%= link_to 'Ver detalles', order %></td>
    <td><%= link_to 'Editar', edit_order_path(order) %></td>
    <td><%= link_to 'Eliminar', order, confirm: 'Esta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

